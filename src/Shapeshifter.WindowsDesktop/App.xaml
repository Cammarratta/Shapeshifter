<Application x:Class="Shapeshifter.WindowsDesktop.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:p="http://schemas.microsoft.com/winfx/2006/xaml/presentation/options"
             xmlns:converters="clr-namespace:Shapeshifter.WindowsDesktop.Controls.Converters"
             xmlns:bindings="clr-namespace:Shapeshifter.WindowsDesktop.Controls.Bindings">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary>
                    <converters:BrushCloneConverter x:Key="BrushCloneConverter" />
                </ResourceDictionary>
                <ResourceDictionary x:Name="Aero">
                    <Color x:Key="AccentColor">#3399ff</Color>
                    <Color x:Key="AccentDarkColor">#236bb2</Color>
                    <Color x:Key="AccentDarkerColor">#1e5b99</Color>

                    <!--<SolidColorBrush p:Freeze="True" x:Key="AccentBrush" Color="{StaticResource AccentColor}" />
                    <SolidColorBrush p:Freeze="True" x:Key="AccentDarkBrush" Color="{StaticResource AccentDarkColor}" />
                    <SolidColorBrush p:Freeze="True" x:Key="AccentDarkerBrush"
                                     Color="{StaticResource AccentDarkerColor}" />-->

                    <SolidColorBrush p:Freeze="True" x:Key="AccentBrush" Color="{bindings:DynamicResourceBinding ResourceKey=SystemColors.WindowColorKey}" />
                    <SolidColorBrush p:Freeze="True" x:Key="AccentDarkBrush" Color="{bindings:DynamicResourceBinding ResourceKey=SystemColors.WindowColorKey}" />
                    <SolidColorBrush p:Freeze="True" x:Key="AccentDarkerBrush" Color="{bindings:DynamicResourceBinding ResourceKey=SystemColors.WindowColorKey}" />

                    <Duration x:Key="SelectionTransitionDuration">0:0:0.1</Duration>
                </ResourceDictionary>
                <ResourceDictionary Source="Controls/Styles/Light.xaml" />
                <ResourceDictionary Source="Controls/Styles/Clipboard.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
<Application x:Class="Shapeshifter.WindowsDesktop.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Dictionaries/Converters.xaml" />
                <ResourceDictionary Source="Resources/Dictionaries/Styles/Themes/Shared.xaml" />
                <ResourceDictionary Source="Resources/Dictionaries/Styles/Themes/Aero.xaml" />
                <ResourceDictionary Source="Resources/Dictionaries/Variables.xaml" />
                <ResourceDictionary Source="Resources/Dictionaries/Styles/Clipboard.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <Style TargetType="{x:Type Control}" />
        </ResourceDictionary>
    </Application.Resources>
</Application>
<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Color x:Key="WindowBackgroundColor">#FEFEFE</Color>
    <SolidColorBrush x:Key="WindowBackgroundBrush" Color="{StaticResource WindowBackgroundColor}" />

    <Color x:Key="ControlBorderColor">#DDDDDD</Color>
    <SolidColorBrush x:Key="ControlBorderBrush" Color="{StaticResource ControlBorderColor}" />

    <Color x:Key="WindowDarkBackgroundColor">#F0F0F0</Color>
    <SolidColorBrush x:Key="WindowDarkBackgroundBrush"
                     Color="{StaticResource WindowDarkBackgroundColor}" />
</ResourceDictionary>
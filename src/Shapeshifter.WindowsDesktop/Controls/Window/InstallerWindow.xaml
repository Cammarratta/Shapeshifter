<Window x:Class="Shapeshifter.WindowsDesktop.Controls.Window.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        WindowStyle="None"
        Title="Shapeshifter installer" Height="190" Width="420">
    <Grid>
        <Rectangle Margin="0" Stroke="{StaticResource AccentBrush}" StrokeThickness="1" />
        <TextBlock Foreground="#39f" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="20"
                   TextWrapping="Wrap" FontWeight="UltraLight" TextAlignment="Center">
            Installing Shapeshifter ...
        </TextBlock>
        <ProgressBar Foreground="{StaticResource AccentDarkBrush}" Background="{StaticResource AccentBrush}" IsIndeterminate="True" VerticalAlignment="Top" Height="5" BorderThickness="0" />
        <ProgressBar Foreground="{StaticResource AccentDarkBrush}" Background="{StaticResource AccentBrush}" IsIndeterminate="True" VerticalAlignment="Bottom" Height="5" BorderThickness="0" />
    </Grid>
</Window>